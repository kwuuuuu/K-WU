// .vscode/settings.json
{
  // 1. Turn off built-in CSS/SCSS/LESS validation
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // 2. Ignore unknown at-rules
  "css.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",

  // 3. Tell VS Code to treat all .css as Tailwind/PostCSS
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // 4. Enable Tailwind IntelliSense everywhere
  "tailwindCSS.includeLanguages": {
    "css": "css",
    "html": "html",
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescript": "typescript",
    "typescriptreact": "typescript"
  }
}
